@model QIAB.Models.QuestionModel

@{
    ViewBag.Title = "New Blog";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Question" asp-action="Edit" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Question" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PotAnswer1" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PotAnswer1" class="form-control" />
                <span asp-validation-for="PotAnswer1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PotAnswer2" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PotAnswer2" class="form-control" />
                <span asp-validation-for="PotAnswer2" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PotAnswer3" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PotAnswer3" class="form-control" />
                <span asp-validation-for="PotAnswer3" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Answer" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Answer" class="form-control" />
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="QuestionTypeId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownList("QuestionTypeId", new SelectList(ViewBag.typeList, "Type", "Type"))
                <span asp-validation-for="QuestionTypeId" class="text-danger"></span>
            </div>


        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
