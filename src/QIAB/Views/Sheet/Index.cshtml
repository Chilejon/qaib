@using Microsoft.EntityFrameworkCore.Query.Expressions
@using QIAB.Models
@model QIAB.Models.Sheet

<form asp-controller="Sheet" asp-action="Index" method="post" class="form-horizontal" role="form">
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="QuestionSet1" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownList("QuestionSet1", new SelectList(ViewBag.typeList, "Type", "Type"))
                <span asp-validation-for="QuestionSet1" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="QuestionSet2" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownList("QuestionSet2", new SelectList(ViewBag.typeList, "Type", "Type"))
                <span asp-validation-for="QuestionSet2" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="QuestionSet3" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownList("QuestionSet3", new SelectList(ViewBag.typeList, "Type", "Type"))
                <span asp-validation-for="QuestionSet3" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="QuestionSet4" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownList("QuestionSet4", new SelectList(ViewBag.typeList, "Type", "Type"))
                <span asp-validation-for="QuestionSet4" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="FromDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FromDate" class="form-control" />
                <span asp-validation-for="FromDate" class="text-danger"></span>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@if (ViewBag.questionSet1 != null)
{
    var q1 = Model.QuestionSet1;
    <text>@q1</text>
    <br />
    <table border="1">
     
        @foreach (QuestionModel question in ViewBag.questionSet1)
        {
            <tr>
                <td>
                    @question.Question
                </td>
                <td>

                    @if (!string.IsNullOrEmpty(@question.PotAnswer1))
                    {
                        <text> A: </text>
                        @question.PotAnswer1
                        <text> B: </text>
                        @question.PotAnswer2
                        <text> C: </text>
                        @question.PotAnswer3
                    }
                </td>
                <td>
                    <text> Answer: </text>@question.Answer
                </td>
            </tr>
            <br/>
        }
    </table>
}
